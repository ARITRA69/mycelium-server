{
  "name": "mycelium-server",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun src/scripts/start.ts",
    "start": "bun src/index.ts",
    "build": "bun build src/index.ts --outdir dist --target bun",
    "type-check": "tsc --noEmit",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "db:drop": "bun src/scripts/drop-all.ts"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prettier": "^3.8.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "firebase-admin": "^13.0.0",
    "@fastify/busboy": "^3.2.0",
    "@qdrant/js-client-rest": "^1.16.2",
    "@types/busboy": "^1.5.4",
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "busboy": "^1.6.0",
    "chalk": "^5.6.2",
    "express": "^5.2.1",
    "multer": "^2.0.2",
    "node-cron": "^4.2.1",
    "ollama": "^0.6.3",
    "postgres": "^3.4.8",
    "zod": "^4.3.6"
  }
}