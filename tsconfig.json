{
  "compilerOptions": {
    "target": "ES2018",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": ".dist",
    "strict": true,
    "baseUrl": "./",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./tests/*"]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
